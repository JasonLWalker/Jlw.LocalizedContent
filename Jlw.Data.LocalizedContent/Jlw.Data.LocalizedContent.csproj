<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GenerateAssemblyInfo>True</GenerateAssemblyInfo>
    <GenerateNuspecDependsOn>$(GenerateNuspecDependsOn);ReadPackageVersionFromOutputAssembly</GenerateNuspecDependsOn>
    <!-- GenerateNuspecDependsOn>$(GenerateNuspecDependsOn);SetPackageVersionFromDataAssembly</ -->
    <RepositoryUrl>https://github.com/JasonLWalker/Jlw.LocalizedContent.git</RepositoryUrl>
    <VersionSuffix>$(VersionSuffix)</VersionSuffix>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <IsPackable>true</IsPackable>
    <PackageId>Jlw.Data.LocalizedContent</PackageId>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageReleaseNotes>Provided as is</PackageReleaseNotes>
    <PackageRequireLicenseAcceptance>False</PackageRequireLicenseAcceptance>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <PropertyGroup>
    <Product>Jlw.LocalizedContent</Product>
    <AssemblyName>Jlw.Data.LocalizedContent</AssemblyName>
    <RootNamespace>Jlw.Data.LocalizedContent</RootNamespace>
    <Company>Jason L. Walker</Company>
    <Authors>Jason L. Walker</Authors>
    <Description>Shared Data Models and Data Repository to implement form and content creation.</Description>
    <Copyright>Copyright ©2012-2021 Jason L. Walker</Copyright>
    <AutoVersionPrefix Condition="'$(AutoVersionPrefix)' == ''">1.1</AutoVersionPrefix>
    <AutoVersionSuffix Condition="'$(AutoVersionSuffix)' == ''">$([System.TimeSpan]::FromTicks($([System.DateTime]::UtcNow.Ticks)).Subtract($([System.TimeSpan]::FromTicks(630822816000000000))).TotalDays.ToString().SubString(0,9))</AutoVersionSuffix>
    <Version Condition="'$(Version)' == ''">$(AutoVersionPrefix).$(AutoVersionSuffix)$(VersionSuffix)</Version>
    <PackageVersion Condition="'$(PackageVersion)' == ''">$(AutoVersionPrefix).$(AutoVersionSuffix)$(VersionSuffix)</PackageVersion>
  </PropertyGroup>


  <ItemGroup>
    <PackageReference Include="Jlw.Utilities.Data" Version="4.0.7789.29087" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="3.1.14" />
    <PackageReference Include="Newtonsoft.Json" Version="11.0.2" />
  </ItemGroup>

  <Target Name="ReadPackageVersionFromOutputAssembly" DependsOnTargets="Build">
    <GetAssemblyIdentity AssemblyFiles="$(OutputPath)\$(AssemblyName).dll">
      <Output TaskParameter="Assemblies" ItemName="PackAssembly" />
    </GetAssemblyIdentity>
    <PropertyGroup>
      <PackageVersion>%(PackAssembly.Version)$(VersionSuffix)</PackageVersion>
    </PropertyGroup>
    <Message Text="Version: $(PackageVersion)" Importance="high" />
  </Target>

  <!--
    ============================================================
    SetPackageVersionFromDataAssembly
    Gathers the package version from the Data assembly and sets
    NuGet version to match. Also sets the version for this
    assembly and package to match version retrieved.
    ============================================================
  -->
