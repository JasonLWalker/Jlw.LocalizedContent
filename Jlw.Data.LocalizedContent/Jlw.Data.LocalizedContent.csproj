<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <GenerateAssemblyInfo>True</GenerateAssemblyInfo>
    <GenerateNuspecDependsOn>$(GenerateNuspecDependsOn);ReadPackageVersionFromOutputAssembly</GenerateNuspecDependsOn>
    <RepositoryUrl>https://github.com/JasonLWalker/Jlw.LocalizedContent.git</RepositoryUrl>
    <VersionSuffix>$(VersionSuffix)</VersionSuffix>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <IsPackable>true</IsPackable>
    <PackageId>Jlw.Data.LocalizedContent</PackageId>
    <GeneratePackageOnBuild>False</GeneratePackageOnBuild>
    <PackageReleaseNotes>Provided as is</PackageReleaseNotes>
    <PackageRequireLicenseAcceptance>False</PackageRequireLicenseAcceptance>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
  </PropertyGroup>

  <PropertyGroup>
    <Product>Jlw.LocalizedContent</Product>
    <AssemblyName>Jlw.Data.LocalizedContent</AssemblyName>
    <RootNamespace>Jlw.Data.LocalizedContent</RootNamespace>
    <Company>Jason L. Walker</Company>
    <Authors>Jason L. Walker</Authors>
    <Description>Shared Data Models and Data Repository to implement form and content creation.</Description>
    <Copyright>Copyright ©2012-2021 Jason L. Walker</Copyright>
    <AssemblyVersion>*</AssemblyVersion>
    <FileVersion>*</FileVersion>

    <AutoVersionPrefix>1.1</AutoVersionPrefix>
    <AutoVersionSuffix>$([System.TimeSpan]::FromTicks($([System.DateTime]::UtcNow.Ticks)).Subtract($([System.TimeSpan]::FromTicks(630822816000000000))).TotalDays.ToString(`####.####`))</AutoVersionSuffix>
    <AssemblyVersion Condition=" '$(AutoVersionSuffix)' == '' ">$(AutoVersionPrefix).0.1</AssemblyVersion>
    <AssemblyVersion Condition=" '$(AutoVersionSuffix)' != '' ">$(AutoVersionPrefix).$(AutoVersionSuffix)</AssemblyVersion>
    <Version Condition=" '$(AutoVersionSuffix)' == '' ">$(AutoVersionPrefix).0.1</Version>
    <Version Condition=" '$(AutoVersionSuffix)' != '' ">$(AutoVersionPrefix).$(AutoVersionSuffix)</Version>
    <FileVersion Condition=" '$(AutoVersionSuffix)' == '' ">$(AutoVersionPrefix).0.1</FileVersion>
    <FileVersion Condition=" '$(AutoVersionSuffix)' != '' ">$(AutoVersionPrefix).$(AutoVersionSuffix)</FileVersion>
  </PropertyGroup>


  <ItemGroup>
    <PackageReference Include="Jlw.Utilities.Data" Version="4.0.7789.29087" />
    <PackageReference Include="Microsoft.Extensions.Options" Version="3.1.14" />
    <PackageReference Include="Newtonsoft.Json" Version="11.0.2" />
  </ItemGroup>

  <Target Name="ReadPackageVersionFromOutputAssembly" DependsOnTargets="Build">
    <GetAssemblyIdentity AssemblyFiles="$(OutputPath)\$(AssemblyName).dll">
      <Output TaskParameter="Assemblies" ItemName="PackAssembly" />
    </GetAssemblyIdentity>
    <PropertyGroup>
      <PackageVersion>%(PackAssembly.Version)$(VersionSuffix)</PackageVersion>
    </PropertyGroup>
  </Target>


</Project>
