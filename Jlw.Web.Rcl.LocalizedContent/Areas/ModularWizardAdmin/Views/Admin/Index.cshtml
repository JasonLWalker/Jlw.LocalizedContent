@model Jlw.Web.Rcl.LocalizedContent.Areas.ModularWizardAdmin.Controllers.AdminController.WizardAdminSettings
@{
    ViewData["Title"] = @Model.PageTitle;
    string version = typeof(Jlw.Web.Rcl.LocalizedContent.Areas.ModularWizardAdmin.Controllers.AdminController).Assembly.GetName().Version?.ToString();
    string apiUrl = (string.IsNullOrWhiteSpace(Model?.ApiOverrideUrl)) ? Url.Action("Index", "Api", new { Area = "ModularWizardAdmin" }) + "/" : Model.ApiOverrideUrl;

    string jsRoot = "LocalizedContent";
}
<script>
    var bPreviewFrameLoaded = false;
    window.addEventListener('message', function(event) {
        // IMPORTANT: Check the origin of the data!
        if (event.origin.indexOf('@String.Format(" {0}://{1}", Context.Request.Scheme, Context.Request.Host)')) {
            switch (event.data['action']) {
                case 'onPreviewLoad':
                    var oFrame = document.getElementById('preview-frame');
                    oFrame.setAttribute('data-preview-initialized', 1);
                    bPreviewFrameLoaded = true;
                    break;
            }
        } else {
            // The data hasn't been sent from your site!
            // Be careful! Do not use it.
            return;
        }
    });

</script>
<div id="wizard-toolbox" class="flex-fill d-flex justify-content-start" style="position: relative; left: calc(-1 * (100vw - 100%)/2); width: 100vw;">
    <div class="d-flex flex-row w-100 p-0 m-0">
        <div class="row w-100 p-0 m-0">
            <div class="col-12">
                <div class="row h-100">
                    @Html.PartialAsync("~/Areas/ModularWizardAdmin/Views/Admin/_LeftToolbar.cshtml").Result
                    <div class="col p-0" style="max-width:calc(100vw - 500px)">
                        <div id="preview-frame-wrapper" class="">
                            <div class="m-0 p-0 border w-100 h-100">
                                <iframe id="preview-frame" src="@Url.Action("Preview")" class="" data-preview-initialized="0"></iframe>
                            </div>
                        </div>
                        <div id="preview-statusbar" class="bg-light border text-left">
                            <div class="float-left">
                                &nbsp;<small><span class="resolution-status"></span></small>
                            </div>
                            <div class="btn-group btn-group-sm btn-group-toggle float-right p-1" data-toggle="buttons">
                                <label class="btn btn-outline-primary p-0">
                                    <input type="radio" name="preview-size" value="" data-breakpoint="" autocomplete="off" checked title="Responsive" />&nbsp;&nbsp;*&nbsp;&nbsp;
                                </label>
                                <label class="btn btn-outline-primary p-0">
                                    <input type="radio" name="preview-size" value="preview-xxs" data-breakpoint="" autocomplete="off" title="extra extra small" />&nbsp;XXS&nbsp;
                                </label>
                                <label class="btn btn-outline-primary p-0">
                                    <input type="radio" name="preview-size" value="preview-xs" data-breakpoint="" autocomplete="off" />&nbsp;XS&nbsp;
                                </label>
                                <label class="btn btn-outline-primary p-0">
                                    <input type="radio" name="preview-size" value="preview-sm" data-breakpoint="-sm" autocomplete="off" />&nbsp;SM&nbsp;
                                </label>
                                <label class="btn btn-outline-primary p-0">
                                    <input type="radio" name="preview-size" value="preview-md" data-breakpoint="-md" autocomplete="off" />&nbsp;MD&nbsp;
                                </label>
                                <label class="btn btn-outline-primary p-0">
                                    <input type="radio" name="preview-size" value="preview-lg" data-breakpoint="-lg" autocomplete="off" />&nbsp;LG&nbsp;
                                </label>
                                <label class="btn btn-outline-primary p-0">
                                    <input type="radio" name="preview-size" value="preview-xl" data-breakpoint="-xl" autocomplete="off" />&nbsp;XL&nbsp;
                                </label>
                                <label class="btn btn-outline-primary p-0">
                                    <input type="radio" name="preview-size" value="preview-xxl" data-breakpoint="-xl" autocomplete="off" />&nbsp;XXL&nbsp;
                                </label>
                            </div>
                        </div>
                    </div>
                    @Html.PartialAsync("~/Areas/ModularWizardAdmin/Views/Admin/_RightToolbar.cshtml").Result
                </div>
            </div>
        </div>
    </div>
</div>
