<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
    <GenerateEmbeddedFilesManifest>true</GenerateEmbeddedFilesManifest>
    <RazorLangVersion>3.0</RazorLangVersion>
    <GenerateNuspecDependsOn>$(GenerateNuspecDependsOn);ReadPackageVersionFromOutputAssembly</GenerateNuspecDependsOn>
    <RepositoryUrl>https://github.com/JasonLWalker/Jlw.LocalizedContent.git</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <IsPackable>true</IsPackable>
    <PackageId>Jlw.Web.Rcl.LocalizedContent</PackageId>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageReleaseNotes>Provided as is</PackageReleaseNotes>
    <PackageRequireLicenseAcceptance>False</PackageRequireLicenseAcceptance>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <ProduceReferenceAssembly>false</ProduceReferenceAssembly>
  </PropertyGroup>

  <PropertyGroup>
    <RestoreIgnoreFailedSource>true</RestoreIgnoreFailedSource>
    <RestoreAdditionalProjectSources>
      $(MSBuildThisFileDirectory)/../Jlw.Data.LocalizedContent/bin/$(Configuration)/
    </RestoreAdditionalProjectSources>
  </PropertyGroup>

  <PropertyGroup>
    <Product>Jlw.LocalizedContent</Product>
    <AssemblyName>Jlw.Web.Rcl.LocalizedContent</AssemblyName>
    <RootNamespace>Jlw.Web.Rcl.LocalizedContent</RootNamespace>
    <Company>Jason L. Walker</Company>
    <Authors>Jason L. Walker</Authors>
    <Description>Razor Class Library to implement form and content creation via a database-driven UI</Description>
    <Copyright>Copyright ©2019-2021 Jason L. Walker</Copyright>
  </PropertyGroup>

  <PropertyGroup>
    <LocalizedContentDataRootPath>..\Jlw.Data.LocalizedContent</LocalizedContentDataRootPath>
  </PropertyGroup>
  
  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
    <PackageReference Include="Microsoft.AspNetCore.Components" Version="3.1.14" />
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="3.1.14" />
    <PackageReference Include="Microsoft.Extensions.FileProviders.Composite" Version="3.1.14" />
    <PackageReference Include="Microsoft.Extensions.FileProviders.Embedded" Version="3.1.14" />
    <PackageReference Include="Jlw.Utilities.WebApiUtility" Version="1.0.7678.29298" />
    <PackageReference Include="BuildBundlerMinifier" Version="3.2.449">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.Web.LibraryManager.Build" Version="2.1.113">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="resources\**\*" />
  </ItemGroup>

  <Target Name="ReadPackageVersionFromOutputAssembly" DependsOnTargets="Build">
    <GetAssemblyIdentity AssemblyFiles="$(OutputPath)\$(AssemblyName).dll">
      <Output TaskParameter="Assemblies" ItemName="PackAssembly" />
    </GetAssemblyIdentity>
    <PropertyGroup>
      <PackageVersion>%(PackAssembly.Version)$(VersionSuffix)</PackageVersion>
    </PropertyGroup>
  </Target>

  <!--
    ============================================================
    SetPackageVersionFromDataAssembly
    Gathers the package version from the Data assembly and sets
    NuGet version to match. Also sets the version for this
    assembly and package to match version retrieved.
    ============================================================
  -->
  <Target Name="SetPackageVersionFromDataAssembly" BeforeTargets="CollectPackageReferences" Condition="Exists('$(MSBuildThisFileDirectory)..\Jlw.Data.LocalizedContent\bin\$(Configuration)\netstandard2.0\Jlw.Data.LocalizedContent.dll')">
    <GetAssemblyIdentity AssemblyFiles="$(MSBuildThisFileDirectory)..\Jlw.Data.LocalizedContent\bin\$(Configuration)\netstandard2.0\Jlw.Data.LocalizedContent.dll">
      <Output TaskParameter="Assemblies" ItemName="DataPackAssembly" />
    </GetAssemblyIdentity>
    <PropertyGroup>
      <LocalizedContentDataPackageVersion>%(DataPackAssembly.Version)</LocalizedContentDataPackageVersion>
      <Version>$(LocalizedContentDataPackageVersion)</Version>
      <FileVersion>$(LocalizedContentDataPackageVersion)</FileVersion>
      <AssemblyVersion>$(LocalizedContentDataPackageVersion)</AssemblyVersion>
    </PropertyGroup>
    <ItemGroup>
      <PackageReference Include="Jlw.Data.LocalizedContent" Version="$(LocalizedContentDataPackageVersion)$(VersionSuffix)" />
    </ItemGroup>
  </Target>

  <!--
    ============================================================
    RestoreAgainBeforeCompile
    Runs `dotnet restore` again to ensure that dependencies 
    are picked up after being modified by 
    SetPackageVersionFromDataAssembly before compilation starts.
    ============================================================
  -->
  <Target Name="RestoreAgainBeforeCompile" BeforeTargets="CoreCompile;Pack">
    <Message Text="Restoring packages again to pick up updated dependency versions." />
    <Exec Command="dotnet restore"/>
  </Target>

</Project>
