<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <TargetFramework>netcoreapp3.1</TargetFramework>
    <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
    <GenerateEmbeddedFilesManifest>true</GenerateEmbeddedFilesManifest>
    <RazorLangVersion>3.0</RazorLangVersion>
    <GenerateNuspecDependsOn>$(GenerateNuspecDependsOn);ReadPackageVersionFromOutputAssembly</GenerateNuspecDependsOn>
    <RepositoryUrl>https://github.com/JasonLWalker/Jlw.LocalizedContent.git</RepositoryUrl>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <IsPackable>true</IsPackable>
    <PackageId>Jlw.Web.Rcl.LocalizedContent</PackageId>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageReleaseNotes>Provided as is</PackageReleaseNotes>
    <PackageRequireLicenseAcceptance>False</PackageRequireLicenseAcceptance>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <ProduceReferenceAssembly>true</ProduceReferenceAssembly>
  </PropertyGroup>

  <PropertyGroup>
    <RestoreAdditionalProjectSources>
      $(MSBuildThisFileDirectory)/../Jlw.Data.LocalizedContent/bin/$(Configuration)/
    </RestoreAdditionalProjectSources>

  </PropertyGroup>

  <PropertyGroup>
    <Product>Jlw.LocalizedContent</Product>
    <AssemblyName>Jlw.Web.Rcl.LocalizedContent</AssemblyName>
    <RootNamespace>Jlw.Web.Rcl.LocalizedContent</RootNamespace>
    <Company>Jason L. Walker</Company>
    <Authors>Jason L. Walker</Authors>
    <Description>Razor Class Library to implement form and content creation via a database-driven UI</Description>
    <Copyright>Copyright ©2019-2021 Jason L. Walker</Copyright>
    <AssemblyVersion>*</AssemblyVersion>
    <FileVersion>*</FileVersion>

    <AutoVersionPrefix>1.1</AutoVersionPrefix>
    <AutoVersionSuffix>$([System.TimeSpan]::FromTicks($([System.DateTime]::UtcNow.Ticks)).Subtract($([System.TimeSpan]::FromTicks(630822816000000000))).TotalDays.ToString(`####.####`))</AutoVersionSuffix>
    <AssemblyVersion Condition=" '$(AutoVersionSuffix)' == '' ">$(AutoVersionPrefix).0.1</AssemblyVersion>
    <AssemblyVersion Condition=" '$(AutoVersionSuffix)' != '' ">$(AutoVersionPrefix).$(AutoVersionSuffix)</AssemblyVersion>
    <Version Condition=" '$(AutoVersionSuffix)' == '' ">$(AutoVersionPrefix).0.1</Version>
    <Version Condition=" '$(AutoVersionSuffix)' != '' ">$(AutoVersionPrefix).$(AutoVersionSuffix)</Version>
    <FileVersion Condition=" '$(AutoVersionSuffix)' == '' ">$(AutoVersionPrefix).0.1</FileVersion>
    <FileVersion Condition=" '$(AutoVersionSuffix)' != '' ">$(AutoVersionPrefix).$(AutoVersionSuffix)</FileVersion>
  </PropertyGroup>

  <PropertyGroup>
    <LocalizedContentDataRootPath>..\Jlw.Data.LocalizedContent</LocalizedContentDataRootPath>
  </PropertyGroup>
  
  <ItemGroup>
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
    <PackageReference Include="Jlw.Data.LocalizedContent" Version="$(AutoVersionPrefix).*" />
    <PackageReference Include="Microsoft.AspNetCore.Components" Version="3.1.14" />
    <PackageReference Include="Microsoft.AspNetCore.Components.Web" Version="3.1.14" />
    <PackageReference Include="Microsoft.Extensions.FileProviders.Composite" Version="3.1.14" />
    <PackageReference Include="Microsoft.Extensions.FileProviders.Embedded" Version="3.1.14" />
    <PackageReference Include="Jlw.Utilities.WebApiUtility" Version="1.0.7678.29298" />
    <PackageReference Include="BuildBundlerMinifier" Version="3.2.449">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.Web.LibraryManager.Build" Version="2.1.113">
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="resources\**\*" />
  </ItemGroup>

  <Target Name="ReadPackageVersionFromOutputAssembly" DependsOnTargets="Build">
    <GetAssemblyIdentity AssemblyFiles="$(OutputPath)\$(AssemblyName).dll">
      <Output TaskParameter="Assemblies" ItemName="PackAssembly" />
    </GetAssemblyIdentity>
    <PropertyGroup>
      <PackageVersion>%(PackAssembly.Version)$(VersionSuffix)</PackageVersion>
    </PropertyGroup>
  </Target>
</Project>
